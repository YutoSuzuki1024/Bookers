<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:create] %>
    <div>
      <%= flash[:create] %>
    </div>
    <% elsif flash[:update] %>
    <div>
      <%= flash[:update] %>
    </div>
    <% end %>
    <%= yield %>
  </body>
</html>
